{
    "id": "chatbot_with_memory",
    "name": "Chatbot with Memory",
    "category": "chatbot",
    "description": "Conversational agent with session memory and context awareness",
    "use_cases": [
        "Interactive assistants",
        "Role-playing bots",
        "Long-form conversation"
    ],
    "document_types": [
        "general",
        "stories",
        "dialogue"
    ],
    "configuration": {
        "chunking": {
            "method": "sentence_window",
            "window_size": 3,
            "overlap": 1
        },
        "embedding": {
            "provider": "openai",
            "model": "text-embedding-3-small",
            "dimensions": 1536,
            "batch_size": 100
        },
        "storage": {
            "type": "pgvector",
            "index_type": "hnsw",
            "distance_metric": "cosine"
        },
        "retrieval": {
            "algorithm": "similarity_search",
            "top_k": 4
        },
        "augmentation": {
            "context": [
                "history",
                "summary"
            ]
        },
        "generation": {
            "strategy": "stuff",
            "llm": "gpt-4o-mini",
            "temperature": 0.8,
            "max_tokens": 500
        }
    },
    "expected_metrics": {
        "accuracy_range": [
            0.85,
            0.92
        ],
        "avg_latency_ms": 800,
        "cost_per_1k_queries": 0.05
    },
    "tags": [
        "chatbot",
        "memory",
        "conversational",
        "interactive"
    ]
}