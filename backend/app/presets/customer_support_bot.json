{
    "id": "customer_support_bot",
    "name": "Customer Support Bot",
    "category": "chatbot",
    "description": "Fast and cost-effective configuration for handling customer queries",
    "use_cases": [
        "Automated customer support",
        "Product FAQ",
        "Troubleshooting assistant"
    ],
    "document_types": [
        "support",
        "manuals",
        "faq"
    ],
    "configuration": {
        "chunking": {
            "method": "recursive",
            "size": 500,
            "overlap": 50
        },
        "embedding": {
            "provider": "openai",
            "model": "text-embedding-3-small",
            "dimensions": 1536,
            "batch_size": 200
        },
        "storage": {
            "type": "pgvector",
            "index_type": "hnsw",
            "distance_metric": "cosine"
        },
        "retrieval": {
            "algorithm": "similarity_search",
            "top_k": 3,
            "score_threshold": 0.75
        },
        "augmentation": {
            "query": [
                "query_expansion"
            ],
            "context": [
                "history"
            ]
        },
        "generation": {
            "strategy": "stuff",
            "llm": "gpt-3.5-turbo",
            "temperature": 0.5,
            "max_tokens": 300
        }
    },
    "expected_metrics": {
        "accuracy_range": [
            0.80,
            0.88
        ],
        "avg_latency_ms": 600,
        "cost_per_1k_queries": 0.02
    },
    "tags": [
        "support",
        "fast",
        "low-cost",
        "chatbot"
    ]
}